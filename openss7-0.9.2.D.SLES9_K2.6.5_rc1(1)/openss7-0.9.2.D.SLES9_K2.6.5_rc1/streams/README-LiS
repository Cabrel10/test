Linux STREAMS (LiS) Binary Compatibility Issues
-----------------------------------------------

32-bit iocblk structures:

 LiS			Solaris			OSF			Linux Fast-STREAMS	
 ---------------	----------------	----------------	----------------	
 int ioc_cmd;		int ioc_cmd;		int ioc_cmd;		int ioc_cmd;		
 cred_t *ioc_cr;	cred_t *ioc_cr;		cred_t *ioc_cr;		cred_t ioc_cr;		
 uint ioc_id;		uint_t ioc_id;		uint ioc_id;		uint ioc_id;		
 uint ioc_count;	size_t ioc_count;	ulong ioc_count;	ulong ioc_count;	
 int ioc_error;		int ioc_error;		int ioc_error;		int ioc_error;		
 int ioc_rval;		int ioc_rval;		int ioc_rval;		int ioc_rval;		
 long ioc_filler[0];	int ioc_fill1;		long ioc_filler[0];	long ioc_filler[0];	
 long ioc_filler[1];	uint_t ioc_flag;	long ioc_filler[1];	long ioc_flag;		
 long ioc_filler[2];	int ioc_filler[0];	long ioc_filler[2];	long ioc_filler[2];	
 long ioc_filler[3];	int ioc_filler[1];	long ioc_filler[3];	long ioc_filler[3];	
 ---------------	----------------	----------------	----------------	

32-bit copyreq structures:

 LiS			Solaris			OSF			Linux Fast-STREAMS	
 ---------------	----------------	----------------	----------------	
 int cq_cmd;		int cq_cmd;		int cq_cmd;		int cq_cmd;		
 cred_t *cq_cr;		cred_t *cq_cr;		cred_t *cq_cr;		cred_t *cq_cr;		
 uint cq_id;		uint_t cq_id;		uint cq_id;		uint cq_id;		
 caddr_t cq_addr;	caddr_t cq_addr;	caddr_t cq_addr;	caddr_t cq_addr;	
 uint cq_size;		size_t cq_size;		uint cq_size;		uint cq_size;		
 int cq_flag;		uint_t cq_flag;		int cq_flag;		int cq_flag;		
 mblk_t *cq_private;	mblk_t *cq_private;	mblk_t *cq_private;	mblk_t *cq_private;	
 long cq_filler[0];	int cq_filler[0];	long cq_filler[0];	long cq_filler[0];	
 long cq_filler[1];	int cq_filler[1];	long cq_filler[1];	long cq_filler[1];	
 long cq_filler[2];	int cq_filler[2];	long cq_filler[2];	long cq_filler[2];	
 long cq_filler[3];	int cq_filler[3];	long cq_filler[3];	long cq_filler[3];	
 ---------------	----------------	----------------	----------------	

32-bit copyresp structures:

 LiS			Solaris			OSF			Linux Fast-STREAMS	
 ---------------	----------------	----------------	----------------	
 int cp_cmd;		int cp_cmd;		int cp_cmd;		int cp_cmd;		
 cred_t *cp_cr;		cred_t *cp_cr;		cred_t *cp_cr;		cred_t *cp_cr;		
 uint cp_id;		uint_t cp_id;		uint cp_id;		uint cp_id;		
 caddr_t cp_rval;	caddr_t cp_rval;	long cp_rval;		caddr_t cp_rval;	
