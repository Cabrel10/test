m4_divert_push([DEFAULTS])
function test_connld() {
    if test $at_verbose = echo
    then
	options='-vvvvv'
    else
	if test $at_arg_given_quiet != false
	then
	    options='-q'
	else
	    options='-vvv'
	fi
    fi
    if test-connld $options -e -o $1
    then
        # check for leaks
	if (cat /proc/streams/strinfo | grep -v '000000000000') >&2
	then
	    return 1
	else
	    return 0
	fi
    else
	return $?
    fi
}
m4_divert_pop([DEFAULTS])

AT_TESTED([test-connld])

AT_BANNER([Connld Test])

AT_SETUP([connld test 1.1])
AT_KEYWORDS([connld])
AT_CHECK([test_connld 1.1], [], [ignore], [], [], [])
AT_CLEANUP

AT_SETUP([connld test 1.2])
AT_KEYWORDS([connld])
AT_CHECK([test_connld 1.2], [], [ignore], [], [], [])
AT_CLEANUP

