if MAINTAINER_MODE
## MAINTAINER_MODE

LSM $(PACKAGE)-$(VERSION).lsm: $(PACKAGE_TARNAME).lsm
	cat $< > $@

$(PACKAGE_DISTDIR)/$(PACKAGE)-$(VERSION).lsm: LSM $(PACKAGE)-$(VERSION).lsm
	@f=`$(ECHO) "$@" | sed -e 's|^.*/||'` ; \
	test "$@" -ef "$$f" && exit 0 ; \
	test ":$(FORCE)" != :force -a \( -f "$@" -o -f "$$f" \) || { \
		$(ECHO) "$(MAKE) $(AM_MAKEFLAGES) -- $$f" ; \
		$(MAKE) $(AM_MAKEFLAGES) -- $$f ; } ; \
	test "$@" -ef "$$f" && exit 0 ; \
	test ":$(FORCE)" != :force -a \( -f "$@" -a "$@" -nt "$$f" \) || { \
		$(ECHO) "cp -f -- $$f $@" ; \
		cp -f -- $$f $@ ; }

release-lsm: $(PACKAGE_DISTDIR)/$(PACKAGE)-$(VERSION).lsm

ALL_LOCAL		+= LSM $(PACKAGE)-$(VERSION).lsm
RELEASE			+= all-release-lsm
RELEASE_DIRECTORIES	+= $(PACKAGE_DISTDIR)
CLEANFILES		+= LSM $(PACKAGE)-$(VERSION).lsm
DISTCLEANFILES		+= $(PACKAGE_TARNAME).lsm
RELEASECLEANFILES	+= $(PACKAGE_DISTDIR)/$(PACKAGE)-$(VERSION).lsm \
			   LSM $(PACKAGE)-$(VERSION).lsm
MAINTAINERCLEANFILES	+= $(srcdir)/$(PACKAGE)-$(VERSION).lsm \
			   $(srcdir)/LSM $(srcdir)/$(PACKAGE_TARNAME).lsm

ALL_RECURSIVE_TARGETS	+= all-release-lsm

## MAINTAINER_MODE
endif

EXTRA_DIST		+= LSM $(PACKAGE)-$(VERSION).lsm

