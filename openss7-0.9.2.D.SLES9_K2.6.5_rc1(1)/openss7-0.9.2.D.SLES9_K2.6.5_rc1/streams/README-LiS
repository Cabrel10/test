 mblk_t *cp_private;	mblk_t *cp_private;	mblk_t *cp_private;	mblk_t *cp_private;	
 long cp_filler[0];	uint_t cp_flag;		long cp_filler[0];	long cp_flag;		
 long cp_filler[1];	int cp_filler[0];	long cp_filler[1];	long cp_filler[1];	
