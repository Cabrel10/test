 --			int ioc_rval;		int ioc_rval;		int ioc_rval;		
 long ioc_filler[1];	int ioc_fill1;		long ioc_filler[0];	long ioc_filler[0];	
 --			uint_t ioc_flag;	--			--			
 long ioc_filler[2];	int ioc_filler[0];	long ioc_filler[1];	long ioc_flag;		
 --			int ioc_filler[1];	--			--			
 long ioc_filler[3];				long ioc_filler[2];	long ioc_filler[2];	
 --						--			--			
 						long ioc_filler[3];	long ioc_filler[3];	
 						--			--			
