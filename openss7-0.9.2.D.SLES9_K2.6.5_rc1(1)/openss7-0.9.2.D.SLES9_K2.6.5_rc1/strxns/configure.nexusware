#
# Make sure that you export the NEXUSWARE_PREFIX to the environment as it is
# used from the environment by the NexusWare cross-compiler during the make
# process.  You will not need to ever define anything like $CC because they
# will be hardcoded into the Makefiles generated by configure.
#

if [ -z "$NEXUSWARE_PREFIX" -o ! -d "$NEXUSWARE_PREFIX" ] ; then
	echo "NEXUSWARE_PREFIX must be set to the NexusWare directory." >&2
	exit 1
fi

path=`echo $0 | sed -e 's|[^/]*$||'`

set -x

${path}configure \
	DESTDIR="$NEXUSWARE_PREFIX" \
	AR="$NEXUSWARE_PREFIX/ppc-linux/bin/ar" \
	AS="$NEXUSWARE_PREFIX/ppc-linux/bin/as" \
	CC="$NEXUSWARE_PREFIX/ppc-linux/bin/gcc" \
	CPP="$NEXUSWARE_PREFIX/ppc-linux/bin/gcc -E" \
	CXX="$NEXUSWARE_PREFIX/ppc-linux/bin/g++" \
	GENKSYMS="$NEXUSWARE_PREFIX/ppc-linux/bin/genksyms" \
	LD="$NEXUSWARE_PREFIX/ppc-linux/bin/ld" \
	LDCONFIG="$NEXUSWARE_PREFIX/ppc-linux/bin/ldconfig" \
	MAKE="$NEXUSWARE_PREFIX/ppc-linux/bin/make" \
	MKROOT="$NEXUSWARE_PREFIX/ppc-linux/bin/mkroot" \
	NM="$NEXUSWARE_PREFIX/ppc-linux/bin/nm" \
	OBJCOPY="$NEXUSWARE_PREFIX/ppc-linux/bin/objcopy" \
	OBJDUMP="$NEXUSWARE_PREFIX/ppc-linux/bin/objdump" \
	RANLIB="$NEXUSWARE_PREFIX/ppc-linux/bin/ranlib" \
	READELF="$NEXUSWARE_PREFIX/ppc-linux/bin/readelf" \
	SIZE="$NEXUSWARE_PREFIX/ppc-linux/bin/size" \
	STRINGS="$NEXUSWARE_PREFIX/ppc-linux/bin/strings" \
	STRIP="$NEXUSWARE_PREFIX/ppc-linux/bin/strip" \
	OBJCOPY_ARGS="-O elf32-powerpc" \
	--prefix="/usr" \
	--infodir='/usr/share/info' \
	--sysconfdir='/etc' \
	--mandir='/usr/share/man' \
	--host=ppc-linux \
	--with-gnu-ld \
	${1+$@}

